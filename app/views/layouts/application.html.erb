  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div class="nav-left">
    <ul class="nav">
      <li><%= image_tag("gainz_logo_teal.png", alt: "Gainz Logo", class: "img-responsive navbar-logo") %></li>
      <li><%= link_to Spree.t(:shop), spree.root_path %></li>
    </ul>
  </div>
  <div class="nav-right">
    <ul class="nav">

    </ul>
  </div>
  </nav>
  <%= yield %>
</body>
</html>
